<Window x:Class="Netgun.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:netgun="clr-namespace:Netgun.Controls"
        Title="Netgun" Height="800" Width="1000">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New Connection" Click="MenuNewConnection_Click" />
                <Separator />
                <MenuItem Header="_Exit" Click="MenuExit_Click"/>
            </MenuItem>
        </Menu>
        <WindowsFormsHost DockPanel.Dock="Bottom" Height="100">
            <netgun:Terminal />
        </WindowsFormsHost>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TreeView Grid.Row="0" Grid.Column="0">
                <TreeViewItem Name="TreeRoot" Header="DB" />
            </TreeView>
            <DataGrid Name="MainGrid" Grid.Row="0" Grid.Column="1" />
        </Grid>
    </DockPanel>
</Window>
